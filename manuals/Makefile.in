include @abs_top_srcdir@/Makefile.inc

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = @bindir@
datarootdir = @datarootdir@
datadir = @datadir@
condocsdir = ${datadir}/doc/converge-@CONVERGE_VERSION@
INSTALL = @INSTALL@


all:
	cd modules && ${MAKE} ${MFLAGS}

install:
	cd modules && ${MAKE} ${MFLAGS} install

clean:
	cd modules && ${MAKE} ${MFLAGS} clean

distclean: clean
	rm -f Makefile
