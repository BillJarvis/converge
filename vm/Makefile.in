PYTHON=@PYTHON@
TRANSLATE_PY=@TRANSLATE_PY@
INSTALL=@INSTALL@

all: converge

converge: *.py Modules/*.py
	${PYTHON} ${TRANSLATE_PY} --opt=@RPYTHON_OPT@ --continuation --output=converge main.py

install:
	${INSTALL} -d ${DESTDIR}${bindir}
	${INSTALL} -c -m 555 converge@EXEC_EXT@ ${DESTDIR}${bindir}

clean:
	rm -rf converge

distclean: clean
	rm -f Makefile
